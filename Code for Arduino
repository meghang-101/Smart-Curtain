#include<Servo.h>  //servo lib
Servo servo;  //Calling Servo function

#define ldrPin A0
#define ledPin 12
#define servoPin 13   //defining pins

void setup()
{
  Serial.begin(9600);  //setting up Baud rate for Serial communication
  pinMode(ldrPin, INPUT);
  servo.attach(servoPin);  //Setting up Servo Motor
}

void loop()

{

  int ldrValue = analogRead(ldrPin);  //reads analog value of ldr

  if (ldrValue >= 300)
  {
    digitalWrite(ledPin, LOW);
    servo.write(0);  //Rotates Servo Motor by angle of 0 degrees
    Serial.print("DAYLIGHT!!Curtain Is Opening. LDR value= ");  //prints statement on Serial monitor
    Serial.println(ldrValue);

  }
  if (ldrValue < 300)
  {
    servo.write(180);
    Serial.print("NIGHT!!Curtain Is Closing. LDR value= ");
    Serial.println(ldrValue);
    digitalWrite(ledPin, HIGH);
  }
}
